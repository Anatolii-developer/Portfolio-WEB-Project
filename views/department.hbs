{{#if department}}
<div class="row">
 <div class="col-md-12">
 <h2>{{ department.departmentName }} - Department:
{{department.departmentId}}</h2>
 <hr />
 <form method="post" action="/department/update">
 <fieldset>
 <div class="row">
 <div class="col-md-6">
 <div class="form-group">
 <label for="firstName">Department:</label>
 <input class="form-control" id="departmentName" name="departmentName" type="text"
value="{{department.departmentName }}" />
 </div>
 </div>
 </div>
 </fieldset>
 <hr />
 <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br
/><br /><br />
<input class="form-control" id="departmentId" name="departmentId" type="hidden"
value="{{department.departmentId}}"/>
 </form>
 </div>
</div>
{{else}}
<div class="col-md-12 text-center">
 <strong>{{message}}</strong>
</div>
{{/if}}